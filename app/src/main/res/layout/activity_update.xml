<!--                android:textSize="30dp"-->
<!--                >-->

<!--            </TextView>-->

<!--            <EditText-->
<!--                android:id="@+id/t002"-->
<!--                android:layout_width="350dp"-->
<!--                android:layout_height="50dp"-->
